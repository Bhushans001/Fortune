@model Category

<div class="card shadow mt-4">
    <div class="card-header bg-gradient bg-secondary">
        <div class="row text-center">
            <h2 class="text-light"> Create Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" action="Create">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" required />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayNumber" class="form-control border-0 shadow" required />
                    <label asp-for="DisplayNumber" class="ms-2"></label>
                    <span asp-validation-for="DisplayNumber" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }