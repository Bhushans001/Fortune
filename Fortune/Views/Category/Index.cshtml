@model List<Category>


<div class="container">
    <idv class="row pt-4 pb-2">
        <div class="col-md-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-md-6 text-end pt-4 pb-2">
            <a asp-controller="Category" asp-action="create" class="btn btn-outline-primary">
                <i class="bi bi-plus-square"></i> Add New Category 
            </a>
        </div>
    </idv>
</div>
    
<body>
    <table class="table table-bordered table-striped">
        <thead class="bg-gradient">
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Display Number
                </th>
                <th>

                </th>
            </tr>
       </thead>
    <tbody>
            @foreach(var item in Model.OrderBy(X=>X.DisplayNumber))
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.DisplayNumber
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }            
    </tbody>       
    </table>
</body>


<div class="row">
    <div class="col-md-6">

    </div>
    <div class="col-md-6 text-end pt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary"> Back to Home Page</a>
    </div>
</div>


