@model Category

<form method="post">
    <div class="border p-0 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <input asp-for="Id" hidden/>
        <div class="mb-3 p-1">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" disabled class="form-control" required />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="DisplayNumber" class="p-1"></label>
            <input asp-for="DisplayNumber" disabled class="form-control" required />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
